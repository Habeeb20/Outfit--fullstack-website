<style>

  body {
    background-color: rgb(10, 194, 188);
  }
    @media screen and (max-width: 600px) {
        body {
            margin:200px;
            padding: 200px;
        }

        .inbox {
            margin: 50px, 50px, 50px, 50px
        }
        
    }

  
        body {
        padding: 0%;
        margin: 0%;
        background-image:url(picturefavorite1.png);
        background-size:cover;
        background-position: center;
       
    }

    @keyframes labels {
        from{
            opacity: 0;
        }
        
        to {
            opacity: 1;
        }
    }
    @keyframes inbox {
        from{
            opacity: 0;
        }
        
        to {
            opacity: 1;
        }
    }

   

   

    .inbox {
        animation: inbox 9s;
        animation-duration: 10s;
        position: relative;
        border: 2px solid white;
        background-color:transparent;
        height: 350px;
        width: 250px;
        padding: 3% 3% 20px 0px;
        margin: 50px 400px;
        margin-top: 40px;
        margin-bottom: 3px;
        padding-bottom: 3%;
        
    }

    .inbox ::before {
        content: "";
        position: absolute;
        transform: scaleX(0.5);
        transform-origin: left;
    }

    .inbox:hover {
        color: blueviolet;
        border:2px solid cyan;
        
        
    }
    .labels {
        animation: labels 3s;
        position: relative;
        margin: 20px;
        margin-left: 3px;
        padding: 20px;
        color:white;
        margin-top: 15px;
        transition: 1s;
        transform-origin: right;
        transform: scaleX(1);
      
    }

    label {
        margin-left:2px ;

    }
    input {
        border-radius: 4px;
        width: 230px;
        background: none;
        outline:none;
        height: 20px;
        color: white;
        text-decoration:none;

    }
    
    .input {
        margin-top: 45px;
        
    }
    h1 {
        color: white;
        text-align: center;
    }

    button {
        width: 80px;
        border-radius: 10px;
        background-color: lightgreen;
        color: black;
        margin: 40px 70px;
        text-decoration: none;
        transition: 0.5s;
    }

    button:hover {
        width: 100px;
       
    }


    .popup {
        position: absolute;
        background-color: white;
        margin: 50px, 50px, 50px, 50px;
        align-items: center;
        text-align: center;
        transform: translate(-50%, -50%) scale(0.1);
        visibility: hidden;
        transition: transform 0.4s, top 0.4s;
        top: 0%;
        left: 50%;


    }

    .open-popup {
        visibility: visible;
        top: 50%;
        transform: translate(-50%, 50%) scale(1);
    }

    @media only screen and (max-width: 700px){

        body {
        padding: 0%;
        margin: 0%;
        background-image:url(picturee.png);
        background-size:cover;
        background-position: center;
       
    }
        .inbox {
            margin: 53px;
            position: absolute;
        }

    
        
    }
  
    

    

    

</style>
