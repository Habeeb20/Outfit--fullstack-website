                  <input class="input" type="text" name="title" value="<%=detaildata.kinds %>" required placeholder="the previous selected type is saved" class="w-50">
              </div>
    
                <div class="input">
                    <label for="text">color</label>
                    <input class="input" type="text" name="color" value="<%=detaildata.color %>" required placeholder="change your preferred color" class="w-50">
                </div>
                
                    <a href="/profile"><button onclick="alert('submitted')">submit</button></a>
                
  
         
    
               
            </div>
    
    
        </div>
       
        </div>
      </div>
        
     
  </form>

   </div>
